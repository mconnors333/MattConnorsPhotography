<p id="notice"><%= notice %></p>
<div class="container">
<h1 class="display-4"><%= current_user.first_name %>'s Photos</h1>
</div>

<div class="container">
<h3><%= link_to '(Add a New Photo)', new_photo_path %></h3>
</div>

<div class="container">

    <% @photos.each do |photo| %>
    <div class="centerCrud">
    <img src="<%= photo.image_address %>"/>
        <p><%= link_to 'Show', photo %> |
        <%= link_to 'Edit', edit_photo_path(photo) %> |
        <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
</div>
